<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Lobby</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/css/bundle.css" />
    <script type="module" src="/js/chat.js" defer></script>
    <script type="module" src="/js/lobby.js" defer></script>
  </head>
  <body>
    <div class="header card">
      <h1>
        Hello
        <%= user.username %>
        (<%= user.id %>)
      </h1>
      <a href="/auth/logout" class="btn-link">Logout</a>
    </div>

    <div class="lobby-container">
      <div class="lobby-game-section">
        <!-- Create game form -->
        <div class="form-card card">
          <h2>Create New Game</h2>
          <form method="post" action="/games">
            <div class="form-group">
              <label for="name">Game Name</label>
              <input type="text" name="name" placeholder="Optional game name" />
            </div>

            <div class="form-group">
              <label for="max_players">Max Players</label>
              <input type="number" name="max_players" value="4" min="2" max="8" />
            </div>

            <button type="submit" class="btn-primary">Create Game</button>
          </form>
        </div>

        <!-- Game list -->
        <div class="section card">
          <h2>Available Games</h2>
          <div id="game-list" class="game-list"></div>
        </div>
      </div>

      <!-- Chat -->
      <div class="chat-container card">
        <h2>Lobby Chat</h2>
        <div id="chat-area">
          <div id="message-listing" class="message-listing"></div>
          <div id="message-submit" class="message-submit">
            <input type="text" placeholder="Enter your message" />
            <button class="btn-primary">Send</button>
          </div>
        </div>
      </div>
    </div>

    <template id="template-chat-message">
      <div class="chat-message">
        <div class="message-header">
          <span class="message-username"></span>
          <span class="message-time"></span>
        </div>
        <span class="message-text"></span>
      </div>
    </template>

    <template id="game-listing-template">
      <div class="game-item">
        <span class="game-id"></span>
        <span class="game-name"></span>
        <span class="game-created-by"></span>
        <span class="game-state"></span>
        <span class="max-players"></span>
        <span class="created-at"></span>
      </div>
    </template>
  </body>
</html>
